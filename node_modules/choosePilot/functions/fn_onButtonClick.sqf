params ["_ctrl"];

private _display = ctrlParent _ctrl;
private _name_pilot = "";
private _name_gunner = "";

_name_pilot = (_display displayCtrl 42) lbText (lbCurSel(_display displayCtrl 42));
_name_gunner = (_display displayCtrl 7) lbText (lbCurSel(_display displayCtrl 7));

if (!(ctrlEnabled (_display displayCtrl 7)) || _name_gunner == _name_pilot) then {
	_name_gunner = "";
};
planeGUNNER = _name_gunner;
PILOT = _name_pilot;

publicVariable "planeGUNNER";
publicVariable "PILOT";
closeDialog 0;

hint format ["Pilot: %1 | Gunner: %2",_name_pilot,_name_gunner];



